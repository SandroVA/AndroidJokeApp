<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/databasestatus_status"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/databasestatus_status"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/databasestatus_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/databasestatus_first" 
        android:textSize="20sp"
        android:layout_marginTop="10dp" />
    
    <TextView
        android:id="@+id/databasestatus_firstdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" 
        android:textSize="20sp" />
    
    <TextView
        android:id="@+id/databasestatus_last"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/databasestatus_last" 
        android:textSize="20sp"
        android:layout_marginTop="10dp" />
    
    <TextView
        android:id="@+id/databasestatus_lastdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" 
        android:textSize="20sp" />
    
   <TextView
        android:id="@+id/databasestatus_categories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/databasestatus_categories" 
        android:textSize="20sp"
        android:layout_marginTop="10dp" />

    <ListView android:layout_width="fill_parent"
        android:layout_height="fill_parent" 
        android:id="@+id/jokeList"/>

</LinearLayout>
