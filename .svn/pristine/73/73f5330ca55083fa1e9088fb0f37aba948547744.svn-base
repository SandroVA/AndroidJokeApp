<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >
    
	<ScrollView
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/websearch_linearlayout_buttons"
	    android:orientation="vertical" >

		<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical" >
	    
		    <TextView
		        android:id="@+id/websearch"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:gravity="center"
		        android:text="@string/websearch"
		        android:textSize="30sp"
		        android:textStyle="bold" />
		
		    <TextView
		        android:id="@+id/holidayCategoryLabel"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="20dp"
		        android:text="@string/websearch_jokeType" />
		
		    <Spinner
		        android:id="@+id/websearch_jokeTypeSpinner"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content" />
		
		    <TextView
		        android:id="@+id/geekCategoryLabel"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="20dp"
		        android:text="@string/websearch_category" />
		
		    <Spinner
		        android:id="@+id/websearch_category_spinner"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content" />
		
		    <TextView
		        android:id="@+id/kidsCategoryLabel"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="20dp"
		        android:text="@string/websearch_sub_category" />
		
		    <Spinner
		        android:id="@+id/websearch_subCategory_spinner"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content" />
		
		    <TextView
		        android:id="@+id/websearch_short_desc"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/websearch_short_desc" />
		
		    <EditText
		        android:id="@+id/websearch_short_desc_editText"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:ems="10" 
		        android:hint="@string/websearch_short_desc">		
		    </EditText>
		    
	    </LinearLayout>
	    
	</ScrollView>
	
	<LinearLayout
        android:id="@+id/websearch_linearlayout_buttons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <Button
            android:id="@+id/websearch_search_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/websearch_search" />

        <Button
            android:id="@+id/websearch_reset_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/websearch_reset" />
        
    </LinearLayout>
	
</RelativeLayout>